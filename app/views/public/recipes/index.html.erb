<div class="container my-5">
  <div class="row">
    <div class="col-12 text-light" style="font-size:70px;">RECIPE</div>
    <div class="col-12" style="font-size:25px;">レシピ一覧</div>
    
      <div class="row my-3">
        <div class="col-8">
            <div class="row">
              <% @recipes.each do |recipe| %>
              <div class="col-md-6 col-lg-3 my-3">
                <div class="card m-1">
                  <%= link_to recipe_path(recipe) do %>
                  <div class="img-wrap">
                    <%= image_tag recipe.image, width:150, height:100, class: "img-resize sized m-3" %>
                  </div>
                  <% end %>
                  <div class="px-3">
                    <p><%= recipe.name %></p>
                    <p><i class="fa-regular fa-clock" style="color: #000000;"></i><%= recipe.time %></p>
                  </div>
                </div>
              </div>
              <% end %>
            </div>
        </div>
          <%= render "public/recipes/ns" %>
      </div>
  </div>
</dev>
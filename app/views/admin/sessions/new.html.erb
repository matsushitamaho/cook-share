<div class="container">
  <h1 class="row m-5">管理者ログイン</h1>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="field row  mx-5 pb-3">
      <div class="col-lg-4">
        <%= f.label :email, "メールアドレス" %>
      </div>
      <div class="col-lg-8">
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"col-lg-6" %>
      </div>
    </div>

    <div class="field row  mx-5 pb-3">
      <div class="col-lg-4">
        <%= f.label :password, "パスワード" %>
      </div>
      <div class="col-lg-8">
        <%= f.password_field :password, autocomplete: "current-password" %>
      </div>
    </div>

    <div class="form-field row  mx-5 pb-3">
      <div class="col-lg-4">
      </div>
      <div class="actions col-lg-4">
        <%= f.submit "ログイン"%>
      </div>
    </div>
  <% end %>

    <div class="form-field row mx-5 pb-3">
      <div class="col-lg-4">
      </div>
      <div class="col-lg-4">
        <%= render "admin/shared/links" %>
      </div>
    </div>
</div>
<div class="container">
  <div class="row" style="text-align: center;">
    <div class="mx-auto">
      <%= image_tag "main2", size: "1325x400"%>
    </div>
  </div>
  <div class="row my-5">
  <!-- 新着レシピ4件 or 余裕があればランキング -->
    <div class="col-8">
      <h3>新着レシピ</h3>
        <div class="row my-4">
          <% @recipes.each do |recipe| %>
          <div class="col-md-6 col-lg-3">
            <div class="card m-1">
              <%= link_to recipe_path(recipe) do %>
              <div class="img-wrap">
                <%= image_tag recipe.image, width: 150, height: 100, class: "img-resize sized m-3" %>
              </div>
              <% end %>
              <div class="px-3">
                <p><%= recipe.name %></p>
                <p class="mb-0"><i class="fa-regular fa-clock" style="color: #000000;"></i><%= recipe.time %></p>
              </div>
              <div class="d-flex">
                <% if recipe.favorited_by?(current_customer) %>
                <p>
                  <%= button_to recipe_favorites_path(recipe), method: :delete, class: 'btn d-flex align-items-center', style: 'color: black;border-color:white;' do %>
                    ♥<%= recipe.favorites.count %>
                  <% end %>
                </p>
                <% else %>
                <p>
                  <%= button_to recipe_favorites_path(recipe), method: :post, class: 'btn d-flex align-items-center', style: 'color: black;border-color:white;' do %>
                    ♡<%= recipe.favorites.count %>
                  <% end %>
                </p>
                <% end %>
                <div class="mt-2" style="margin-left:15px;">
                  <i class="fa-regular fa-comment" style="color: #000000;"></i>
                  <%= recipe.post_comments.count %>
                </div>
              </div>
            </div>
          </div>
          <% end %>
        </div>
        <div class="my-3 text-right">
          <%= link_to "レシピ一覧へ▷▷", recipes_path, class: "nav-link", style: "color: black;" %>
        </div>
    </div>


  <!-- 新規投稿ボタン&検索機能 -->
    <%= render "public/recipes/ns" %>
  </div>
</div>